<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:padding="12dp"
    android:background="@drawable/bg_surface"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/category_name"
            android:textStyle="bold"
            android:textColor="@color/ocean_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/category_count"
            android:layout_marginTop="2dp"
            android:textColor="@color/ocean_text_subtle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_delete_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_icon_button"
        android:contentDescription="@string/delete_category"
        app:tint="@color/ocean_error"
        android:src="@drawable/ic_delete"/>
</LinearLayout>
